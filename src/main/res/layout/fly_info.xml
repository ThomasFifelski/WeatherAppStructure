<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".FlyInfo "
              android:background="@drawable/cloud2">
    <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text=" "
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Zip Code"
            android:id="@+id/textView"
            android:layout_gravity="left"
            android:textColor="#010101"
            android:layout_alignTop="@+id/editText"
            android:layout_alignParentLeft="true"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


    </LinearLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="WindSpeed"
                android:id="@+id/textView3"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:textColor="#010101"/>



        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="windSpeedreading"
                android:id="@+id/windSpeedOutput"
                android:textColor="#010101"
                android:layout_gravity="center"
                android:layout_weight="10" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MPH"
                android:textColor="#010101"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:layout_weight="10" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Windbearing"
                android:id="@+id/windSpeedView"
                android:layout_gravity="left"
                android:layout_weight="10"
                android:textColor="#010101"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/windBearingView"
                android:layout_gravity="center"
                android:textColor="#010101"
                android:layout_weight="10" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="NW"
                android:id="@+id/textView10"
                android:layout_gravity="center"
                android:textColor="#010101"
                android:layout_weight="10" />







    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:id="@+id/textView11"
                android:layout_gravity="left"
                android:textColor="#010101"
                android:layout_weight="10" />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pressure"
                android:layout_gravity="center"
                android:textColor="#010101"
                android:layout_weight="10" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="mmHG"
                android:id="@+id/textView14"
                android:layout_gravity="center"
                android:textColor="#010101"
                android:layout_weight="10" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Visibility"
                android:id="@+id/textView15"
                android:layout_gravity="left"
                android:textColor="#010101"
                android:layout_weight="10" />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/visibility"
                android:textColor="#010101"
                android:layout_weight="10" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="miles"
                android:id="@+id/textView18"
                android:layout_gravity="center"
                android:textColor="#010101"
                android:layout_weight="10" />

    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good or Bad day to Fly"
            android:id="@+id/goodorbad"
            android:layout_gravity="center"
            android:textColor="#010101"
            android:layout_weight="10" />


    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@id/imageViewd"
            android:src="@drawable/kite_3"
            android:textColor="#010101"
            android:layout_marginTop="2dp"/>


</LinearLayout>